<?xml version='1.0' encoding='utf-8'?>
<widget id="com.eshortis.rhmapmonitor" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>RHMAP Monitor</name>
    <description>
        application that provides insight into your rhmap instance on the go
    </description>
    <author email="eshortis@redhat.com" href="http://cordova.io">
        Evan Shortiss
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <splash height="2208" src="res/screen/ios/Default-736h.png" width="1242" />
        <icon height="120" src="res/ios/icon/icon-60@2x.png" width="120" />
    </platform>
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-statusbar" spec="~2.2.1" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.1" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.7.1" />
</widget>
